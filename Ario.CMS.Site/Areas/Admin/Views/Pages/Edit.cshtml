@model Ario.CMS.Data.Models.Page

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Page</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageID" />
            <input type="hidden" asp-for="ImageName" />
            <input type="hidden" asp-for="CreateDate" />
            <div class="form-group">
                <label asp-for="GroupID" class="control-label"></label>
                @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="GroupID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageTitle" class="control-label"></label>
                <input asp-for="PageTitle" class="form-control" />
                <span asp-validation-for="PageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortDescription" class="control-label"></label>
                <textarea asp-for="ShortDescription" class="form-control"></textarea>
                <span asp-validation-for="ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageText" class="control-label"></label>
                <textarea asp-for="PageText" class="form-control" id="PageText"></textarea>
                <span asp-validation-for="PageText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <textarea asp-for="Tags" class="form-control"></textarea>
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageName" class="control-label"></label>
                <input asp-for="ImageName" type="file" name="imgUP" />
                <span asp-validation-for="ImageName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShowInSlider" /> @Html.DisplayNameFor(model => model.ShowInSlider)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/TinyMCE/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: '#PageText'
        });
    </script>
}
