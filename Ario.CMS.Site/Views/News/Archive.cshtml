@model IEnumerable<Ario.CMS.Data.Models.Page>

@{
    ViewData["Title"] = "آرشیو خبرها";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">خانه </a></li>
    <li class="breadcrumb-item"><a href="/Archive">اخبار </a></li>
    <li class="breadcrumb-item active"> آرشیو خبر ها </li>
</ul>

<!-- last news -->
<section class="last-news-section border-radius">
    <header><i class="fa fa-newspaper-o fa-2x"></i><h3> آرشیو اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="/PageImages/@item.ImageName">
                <h2><a href="">@item.PageTitle</a></h2>
                <p>
                    @item.ShortDescription
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
                <a href="" class="more-link"><i class="fa fa-ellipsis-h fa-2x"></i></a>
            </li>
        }
    </ul>
</section>
<!-- End last news -->

<ul class="pagination">
    <li><a href="#">1</a></li>
    <li class="active"><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
</ul>
