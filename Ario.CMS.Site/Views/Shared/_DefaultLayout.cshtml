@inject SignInManager<IdentityUser> signInManager

<!DOCTYPE html>
<html class="no-js" dir="rtl" lang="fa-IR">
<head>
    <meta charset="UTF-8">
    <title> سایت خبری برنامه نویسان </title>
    <base href="">
    <meta name="googlebot" content="index,follow">
    <meta name="robots" content="noodp,noydir">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/css/bootstrap-rtl.min.css">
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/css/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/SiteTemplate/css/style.css">
    <script src="~/SiteTemplate/js/jquery.min.js"></script>
</head>
<body>
    <script src="~/SiteTemplate/js/modernizr.js"></script>

    <!-- Top Menu -->
    <div class="top-menu">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-5">
                    <ul>
                        <li><a href=""><i class="fa fa-home"></i></a></li>
                        <li><a href=""><i class="fa fa-question-circle"></i></a></li>
                        <li><a href=""><i class="fa fa-envelope"></i></a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-7">
                    <span>امروز : @DateTime.Now.ToShamsi()</span>
                </div>
            </div>
        </div>
    </div>
    <!-- End Top Menu -->
    <!-- header -->
    <header class="main-header">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <a href="" class="logo"><img src="~/SiteTemplate/img/Web-APP-300x300.png" style="max-width: 65px;" alt="" title=""></a>
                    <div class="left-side">
                        <h1><a href="/">سایت خبری  &copy;ArioCMS</a></h1>
                        <h2> پایگاه اطلاع رسانی و خبری</h2>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <form action="" method="get" class="border-radius">
                        <input class="border-radius" type="text" placeholder=" جستجو کنید ... ">
                        <button><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header -->
    <!-- menu -->
    <nav class="main-menu">
        <div class="container">
            <span><i class="fa fa-th-list"></i></span>
            <ul>
                <li><a href="/"> صفحه اصلی </a></li>
                <li>
                    <span>گروه های خبری</span>
                    @await Component.InvokeAsync("CategoryMenu")
                </li>
                @if (!signInManager.IsSignedIn(User))
                {
                    <li><a asp-action="Login" asp-controller="Account"> ورود به سایت </a></li>
                    <li><a asp-action="Register" asp-controller="Account"> ثبت نام </a></li>
                }
                else
                {
                    <li><a href="/">سلام  @User.Identity.Name</a></li>
                    <li><a asp-action="LogOff" asp-controller="Account">خروج</a></li>
                }
                @if (User.IsInRole("Admin"))
                {
                    <li><a href="/Admin/PageGroups/Index"> مدیریت گروه ها </a></li>
                    <li><a href="/Admin/Pages/Index"> مدیرت خبر ها </a></li>
                    <li><a asp-action="Index" asp-controller="ManageUser"> مدیریت کاربران </a></li>
                    <li><a asp-action="Index" asp-controller="ManageRole"> مدیریت نقش ها </a></li>
                }
            </ul>
        </div>
    </nav>
    <!-- End menu -->

    <div class="container margin-top-30">
        <div class="row">

            <aside class="col-md-4 col-sm-12 col-xs-12 pull-right">

                @await Component.InvokeAsync("LatestComment")
                <!-- most views news -->
                @await Component.InvokeAsync("MostNews")
                <!-- end most views news -->
            </aside>


            <div class="col-md-8 col-sm-12 col-xs-12 ">

                @RenderBody()

            </div>

        </div>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <section class="access-links">
                        <header> دسترسی سریع </header>
                        <ul>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> راهنمای سایت  </a></li>
                            <li><a href=""> پیوندهای سایت </a></li>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> صفحه اصلی </a></li>
                            <li><a href=""> قوانین سایت  </a></li>
                            <li><a href=""> راهنمای سایت  </a></li>
                        </ul>
                    </section>
                </div>
                <div class="col-md-5 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="socials">
                        <span> شبکه های اجتماعی  سایت</span>
                        <a href=""><i class="fa fa-facebook"></i></a>
                        <a href=""><i class="fa fa-twitter"></i></a>
                        <a href=""><i class="fa fa-paper-plane"></i></a>
                        <a href=""><i class="fa fa-google-plus"></i></a>
                        <div class="clearfix"></div>
                    </div>
                    <p>
                        تمامی حقوق مادی و معنوی این سایت متعلق به علیرضا شیعه می باشد و کپی برداری از این سایت غیر اخلاقی می باشد.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/SiteTemplate/js/bootstrap.min.js"></script>
    <script src="~/SiteTemplate/js/owl.carousel.js"></script>
    <script src="~/SiteTemplate/js/script.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
