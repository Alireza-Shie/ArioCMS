@model IEnumerable<Ario.CMS.Data.Models.Page>

<section class="last-news-side border-radius">
    <header><i class="fa fa-star fa-2x"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/PageImages/@item.ImageName">

                <h2><a href="">@item.PageTitle</a></h2>
                <span>انتشار : @item.CreateDate.ToShamsi()</span>
            </li>
        }
    </ul>
</section>